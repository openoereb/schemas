{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"$id": "http://schemas.geo.admin.ch/V_D/OeREB/2.0/extract.json",
	"fileVersion": "2.0.0",
	"type": "object",
	"oneOf": [{
		"properties": {
			"GetExtractByIdResponse": {
				"$ref": "#/definitions/GetExtractByIdResponseType"
			}
		},
		"required": [
			"GetExtractByIdResponse"
		]
	}, {
		"properties": {
			"GetEGRIDResponse": {
				"$ref": "#/definitions/GetEGRIDResponseType"
			}
		},
		"required": [
			"GetEGRIDResponse"
		]
	},{
		"properties": {
			"GetCapabilitiesResponse": {
				"$ref": "#/definitions/GetCapabilitiesResponseType"
			}
		},
		"required": [
			"GetCapabilitiesResponse"
		]
	}],
	"definitions": {

		"FlavourType": {
			"pattern": "REDUCED|SIGNED|(ch.[A-Z]{2}.[a-zA-Z][a-zA-Z0-9]*)|(fl.[a-zA-Z][a-zA-Z0-9]*)"
		},

		"GetExtractByIdResponseType": {
			"type": "object",
			"properties": {
				"extract": {
					"$ref": "./extractdata.json#/definitions/Extract"
				}
			},
			"required": [
				"extract"
			]
		},
		"GetEGRIDResponseType": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"egrid": {
						"type": "string"
					},
					"number": {
						"type": "string"
					},
					"identDN": {
						"type": "string"
					},
					"type": {
						"$ref": "extractdata.json#/definitions/RealEstateType"
					},
					"limit": {
						"$ref": "extractdata.json#/definitions/MultiSurface"
					}
				}
			}
		},

		"GetCapabilitiesResponseType": {
			"type": "object",
			"properties": {
				"topic": {
					"type": "array",
					"items": {
						"$ref": "extractdata.json#/definitions/Theme"
					}
				},
				"municipality": {
					"type": "array",
					"items": {
						"$ref": "extractdata.json#/definitions/MunicipalityCode"
					}
				},
				"flavour": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/FlavourType"
					}
				},
				"language": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"crs": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			}
		}

	}
}
